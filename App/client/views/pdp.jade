extends layout

block header
    include ./components/header.jade

block breadcrumbs
    div(class='breadcrumbs-container')
        ul(class='breadcrumbs') 
            li
                a(href='/')='HOME /'

block content
    -
        var imgUrl = product.image_groups[0].images[0].link;
        var imgTitle = product.image_groups[0].images[0].title;

    main(class='main-content')
        div(class='product-main clearfix')
            div(class='product-main-image')
                img(src="/images/#{imgUrl}", alt="#{imgTitle}")
            div(class='product-main-desc')
                h4=product.name
                div(class='product-full-info')
                    !{product.short_description}
                    !{product.long_description}
                    div(class='product-buy')
                        button(class='buy-btn')='Buy'
                        div(class='product-pricing')
                            p(class='pdp-price')='Price: '
                                span(class='price-val')=product.price
                            select(class='currency')
                                option(value='usd')='USD'
                                option(value='eur')='EUR'
                                option(value='uah')='UAH'
                                option(value='gbp')='GBP'
                                option(value='cad')='CAD'

block footer
    include ./components/footer.jade